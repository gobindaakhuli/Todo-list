@model List<Todo.Entities.TaskEntity>

@for (int i = 0; i < Model.Count; ++i)
{
    <tr>
        <td>@Model[i].Id</td>
        <td>@Model[i].Title</td>
        <td>
            <input type="hidden" name="id + @i" value="@i"/>
            <input type="checkbox" name="cbIsDone" checked="@Model[i].IsDone" data-task-id="@Model[i].Id"/>
            <a href="/Task/Edit?id=@Model[i].Id">Edit</a>
        </td>
    </tr>
}